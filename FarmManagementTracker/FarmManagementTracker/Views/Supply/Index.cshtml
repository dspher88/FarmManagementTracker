@model List<FarmManagementTracker.Models.SupplyItem>

@{
    ViewData["Title"] = "Supply Inventory";
}

<h2 class="text-success">Supply Inventory</h2>

@if (User.IsInRole("Admin") || User.IsInRole("Viewer"))
{
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-outline-success">+ Add New Supply</a>
    </div>
}

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Quantity</th>
            <th>Unit</th>
            <th>Notes</th>
            @if (User.IsInRole("Admin") || User.IsInRole("Viewer"))
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>@item.Quantity</td>
                <td>@item.Unit</td>
                <td>@item.Notes</td>
                @if (User.IsInRole("Admin") || User.IsInRole("Viewer"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>




