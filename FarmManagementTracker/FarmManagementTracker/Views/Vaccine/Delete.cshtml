@model FarmManagementTracker.Models.VaccinationRecord
@{
    ViewData["Title"] = "Delete Vaccination";
}

<h2>Delete Vaccination</h2>

<div class="alert alert-danger">
    <strong>Are you sure you want to delete this record?</strong>
</div>

<dl class="row">
    <dt class="col-sm-2">Vaccine</dt>
    <dd class="col-sm-10">@Model.VaccineName</dd>

    <dt class="col-sm-2">Date Given</dt>
    <dd class="col-sm-10">@Model.DateGiven.ToShortDateString()</dd>

    <dt class="col-sm-2">Next Due</dt>
    <dd class="col-sm-10">@Model.NextDueDate?.ToShortDateString()</dd>

    <dt class="col-sm-2">Notes</dt>
    <dd class="col-sm-10">@Model.Notes</dd>
</dl>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-animalId="@Model.AnimalId" class="btn btn-secondary">Cancel</a>
</form>
