@model FarmManagementTracker.Models.Animal

@{
    ViewData["Title"] = "Delete Animal";
}

<h2 class="text-danger">Delete Animal</h2>

<h4>Are you sure you want to delete this animal?</h4>
<div>
    <strong>@Model.Name</strong> — @Model.Type, @Model.Breed
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>

