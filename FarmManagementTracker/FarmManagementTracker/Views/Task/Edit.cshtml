@model FarmManagementTracker.Models.FarmTask

@{
    ViewData["Title"] = "Edit Task";
}

<h2 class="text-warning">Edit Recurring Task</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="TaskName"></label>
        <input asp-for="TaskName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Frequency"></label>
        <input asp-for="Frequency" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NextDueDate"></label>
        <input asp-for="NextDueDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Notes"></label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-warning mt-2">Update</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
</form>

